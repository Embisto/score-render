g.extra-staff(ng-if ='hasExtraStaff()')
  // upper extra stuff lines
  g(ng-if='extraLineDirection === 1')
    line(
      ng-repeat = 'line in [numberOfExtraLines] | range track by $index'
      ng-attr-x1 = '{{-0.5 * spacing}}'
      ng-attr-y1 = '{{$index * spacing}}'
      ng-attr-x2 = '{{2 * spacing}}'
      ng-attr-y2 = '{{$index  * spacing}}'
      stroke-width = '0.975'
      ng-attr-transform = 'translate(0, {{6 * spacing}})'
      stroke = 'black')
  // lower extra stuff lines
  g(ng-if='extraLineDirection === -1')
    line(
      ng-repeat = 'line in [numberOfExtraLines] | range track by $index'
      ng-attr-x1 = '{{-0.5 * spacing}}'
      ng-attr-y1 = '{{-$index * spacing}}'
      ng-attr-x2 = '{{2 * spacing}}'
      ng-attr-y2 = '{{-$index  * spacing}}'
      stroke-width = '0.975'
      stroke = 'black')
